<div class="post-form">
  <h3 class = "comment-header">Add Comment</h3>
  <%# <%= render partial: 'shared/nav_link' %>
<%= form_with(model: @comment, url: user_post_comments_url(@post.author, @post), local: true) do |form| %> 

<div class="form-group">
      <%= form.label ':', class: 'form-label' %>
      <%= form.text_area :text, class: 'form-control', name: 'comment[text]' %>
    </div>
    <div class="create-post-Comment see-all-posts btn-comment">
  <%= form.submit 'Create New Comment', class: 'create-post-link see-link ' %>
  </div>
<% end %>
</div>