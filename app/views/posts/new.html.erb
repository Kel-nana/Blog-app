<div class = "post-form">
 <h3>Create New Post</h3>
 <%= render partial: 'shared/nav_link' %>
  <%= form_with(model:  @post, url: user_posts_path, local: true) do |form| %>
     <div class="form-group">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control', name: 'post[title]' %>
    </div>
    
    <div class="form-group">
      <%= form.label :text, class: 'form-label' %>
      <%= form.text_area :text, class: 'form-control', name: 'post[text]' %>
    </div>
    <%= form.submit 'Create Post' %>
  <% end %>
</div>