<section id = "log-in-body">
  <div class="card-log">
          <div class="card-container">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="field">
    <%= f.label :"e-Mail", class: "input-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input-field"%>
  </div>

  <div class="field">
    <%= f.label :password, class: "input-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "input-field input-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div id="field-remember">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "log-in-btn" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
        </div>
        </div>
</section>