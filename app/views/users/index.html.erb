<h1>User List</h1>

<style>
  ul.user-list {
    list-style-type: none;
  }
</style>

<main id="home" class="page">
  <ul class="user-list">
    <% @users.each do |user| %>
      <li class="user-item">
        <div class="user-image">
          <%= image_tag('user.png', width: "150px", height: "100px") %>
        </div>
        <div class="user-details">
          <h2><%= link_to user.name, "users/#{user.id}", class: "user-link" %></h2>
          <p class="post-count">Number of posts: <%= user.posts_counter || 0 %></p>
        </div>
      </li>
    <% end %>
  </ul>
</main>
