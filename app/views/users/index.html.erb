<%# <h1>User List</h1> %>

<style>
  ul.user-list {
    list-style-type: none;
  }
</style>

<main id="home" class="page">
  <ul class="user-list">
    <% @users.each do |user| %>
      <li class="user-item">
      <%= render partial: 'shared/user_item', locals: { user: user, show_link: true  } %>
      </li>
    <% end %>
  </ul>
</main>
